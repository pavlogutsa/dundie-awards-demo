{
  "info": {
    "name": "ninjaone-dundie.postman_collection_refactored",
    "_postman_id": "22222222-3333-4444-5555-666666666666",
    "description": "Refactored endpoints for NinjaOne Dundie Awards demo (employees, activities, index). All API endpoints require JWT authentication. Use the login endpoint first to obtain a token.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "POST /api/auth/login - login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set(\"jwt_token\", jsonData.token);",
                  "    console.log(\"JWT token saved to collection variable\");",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"{{username}}\",\n  \"password\": \"{{password}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            },
            "description": "Authenticates a user and returns a JWT token. The token is automatically saved to the collection variable 'jwt_token' for use in subsequent requests. Default credentials: admin/admin (created automatically on application startup)."
          }
        }
      ]
    },
    {
      "name": "Index",
      "item": [
        {
          "name": "GET / - index page",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/",
              "host": ["{{base_url}}"],
              "path": [""]
            },
            "description": "Public endpoint - returns the index page"
          }
        }
      ]
    },
    {
      "name": "Employees",
      "item": [
        {
          "name": "GET /api/employees - list employees",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/employees?page=0&size=20&sort=id,asc",
              "host": ["{{base_url}}"],
              "path": ["api", "employees"],
              "query": [
                {
                  "key": "page",
                  "value": "0",
                  "description": "Page number (0-indexed)"
                },
                {
                  "key": "size",
                  "value": "20",
                  "description": "Page size"
                },
                {
                  "key": "sort",
                  "value": "id,asc",
                  "description": "Sort field and direction (format: field,direction)"
                }
              ]
            },
            "description": "Returns paginated list of employees. Default: page=0, size=20, sort=id,asc. Requires authentication."
          }
        },
        {
          "name": "GET /api/employees/{id} - get employee by id",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/employees/{{employeeId}}",
              "host": ["{{base_url}}"],
              "path": ["api", "employees", "{{employeeId}}"]
            },
            "description": "Returns a single employee by ID. Requires authentication."
          }
        },
        {
          "name": "POST /api/employees - create employee",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"Jim\",\n  \"lastName\": \"Halpert\",\n  \"organizationId\": 1\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/employees",
              "host": ["{{base_url}}"],
              "path": ["api", "employees"]
            },
            "description": "Creates a new employee. Requires authentication."
          }
        },
        {
          "name": "PUT /api/employees/{id} - update employee",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"UpdatedFirstName\",\n  \"lastName\": \"UpdatedLastName\",\n  \"organizationId\": 1\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/employees/{{employeeId}}",
              "host": ["{{base_url}}"],
              "path": ["api", "employees", "{{employeeId}}"]
            },
            "description": "Fully updates an employee. All fields are required. Requires authentication."
          }
        },
        {
          "name": "PATCH /api/employees/{id} - partial update employee",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"firstName\": \"UpdatedFirstName\",\n  \"lastName\": null,\n  \"organizationId\": null\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/api/employees/{{employeeId}}",
              "host": ["{{base_url}}"],
              "path": ["api", "employees", "{{employeeId}}"]
            },
            "description": "Partially updates an employee. Only provided fields will be updated. Omit fields or set to null to leave unchanged. Requires authentication."
          }
        },
        {
          "name": "DELETE /api/employees/{id} - delete employee",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/employees/{{employeeId}}",
              "host": ["{{base_url}}"],
              "path": ["api", "employees", "{{employeeId}}"]
            },
            "description": "Deletes an employee. Requires authentication."
          }
        },
        {
          "name": "POST /api/employees/{id}/awards - award employee",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"awardType\": \"INNOVATION\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/api/employees/{{employeeId}}/awards",
              "host": ["{{base_url}}"],
              "path": ["api", "employees", "{{employeeId}}", "awards"]
            },
            "description": "Awards an employee and creates an activity. Valid awardType values: HELPED_TEAMMATE, COMPLETED_PROJECT, MENTORED_COLLEAGUE, INNOVATION, CUSTOMER_SATISFACTION. Requires authentication."
          }
        },
        {
          "name": "DELETE /api/employees/{id}/awards - remove award",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/employees/{{employeeId}}/awards",
              "host": ["{{base_url}}"],
              "path": ["api", "employees", "{{employeeId}}", "awards"]
            },
            "description": "Removes an award from an employee and creates an AWARD_REMOVED activity. Requires authentication."
          }
        }
      ]
    },
    {
      "name": "Organizations",
      "item": [
        {
          "name": "GET /api/organizations - list organizations",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/organizations?page=0&size=20&sort=id,asc",
              "host": ["{{base_url}}"],
              "path": ["api", "organizations"],
              "query": [
                {
                  "key": "page",
                  "value": "0",
                  "description": "Page number (0-indexed)"
                },
                {
                  "key": "size",
                  "value": "20",
                  "description": "Page size"
                },
                {
                  "key": "sort",
                  "value": "id,asc",
                  "description": "Sort field and direction (format: field,direction)"
                }
              ]
            },
            "description": "Returns paginated list of organizations. Default: page=0, size=20, sort=id,asc. Requires authentication."
          }
        },
        {
          "name": "POST /api/organizations/{organizationId}/awards - award all employees in organization",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/organizations/{{organizationId}}/awards?type=INNOVATION",
              "host": ["{{base_url}}"],
              "path": ["api", "organizations", "{{organizationId}}", "awards"],
              "query": [
                {
                  "key": "type",
                  "value": "INNOVATION",
                  "description": "Award type (case-insensitive). Valid values: HELPED_TEAMMATE, COMPLETED_PROJECT, MENTORED_COLLEAGUE, INNOVATION, CUSTOMER_SATISFACTION"
                }
              ]
            },
            "description": "Awards all employees belonging to the given organization with the specified award type. Returns a list of updated employee DTOs. The award type is case-insensitive. Requires authentication."
          }
        }
      ]
    },
    {
