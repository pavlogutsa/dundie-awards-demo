                },
                {
                  "key": "size",
                  "value": "20",
                  "description": "Page size"
                },
                {
                  "key": "sort",
                  "value": "occurredAt,desc",
                  "description": "Sort field and direction (format: field,direction). Default: occurredAt,desc (most recent first)"
                }
              ]
            },
            "description": "Returns paginated list of activities. Activities are read-only. They are created automatically when employees are awarded or awards are removed. Default: page=0, size=20, sort=occurredAt,desc. Requires authentication."
          }
